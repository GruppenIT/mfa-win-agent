<Project Sdk="Microsoft.NET.Sdk.Worker">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <OutputType>exe</OutputType>
    <AssemblyName>GruppenMFA.AgentService</AssemblyName>
    <RootNamespace>GruppenMFA.AgentService</RootNamespace>
    <Version>1.0.0</Version>
    <Company>Gruppen IT</Company>
    <Product>GruppenMFA Agent Service</Product>
    <Copyright>Copyright 2026 Gruppen it Security</Copyright>
    <Description>Background service for MFA Gruppen Credential Provider - handles telemetry, remote configuration and tamper protection.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="8.0.1" />
  </ItemGroup>

</Project>
