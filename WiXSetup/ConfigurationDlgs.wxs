<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <!-- SINGLE PAGE: ServerDlg â€” only ServerUrl + ApiKey -->
            <TextStyle Id="Tahoma_Bold" FaceName="Tahoma" Size="8" Bold="yes" />
            <Dialog Id="ServerDlg" Width="370" Height="270" Title="[ProductName] Setup" NoMinimize="yes">
                <!-- Server URL -->
                <Control Type="Text" Id="ServerUrlLabel" Width="320" Height="15" X="20" Y="50" Text="{\Tahoma_Bold}MFA Server URL:" />
                <Control Type="Edit" Id="ServerUrlEdit" Width="320" Height="15" X="20" Y="68" Property="SERVER_URL" />
                <Control Type="Text" Id="ServerUrlHint" Width="320" Height="15" X="20" Y="87" Text="Example: https://mfa.empresa.com.br" />

                <!-- API Key -->
                <Control Type="Text" Id="ApiKeyLabel" Width="320" Height="15" X="20" Y="115" Text="{\Tahoma_Bold}API Key:" />
                <Control Type="Edit" Id="ApiKeyEdit" Width="320" Height="15" X="20" Y="133" Property="API_KEY" />
                <Control Type="Text" Id="ApiKeyHint" Width="320" Height="25" X="20" Y="152" Text="The managed API key (starts with mfa_). Get this from the MFA admin panel." />

                <!-- Optional: Enable Filter + Debug -->
                <Control Type="CheckBox" Id="EnableFilter" Property="ENABLE_FILTER" CheckBoxValue="1" Width="300" Height="17" X="20" Y="187" Text="Enable Credential Provider Filter (block other providers)" />
                <Control Type="CheckBox" Id="DebugLog" Property="DEBUG_LOG" CheckBoxValue="1" Width="300" Height="17" X="20" Y="204" Text="Enable debug logging" />

                <!-- Bottom Controls NEXT / BACK, Top Banner -->
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
                    <Publish Event="NewDialog" Value="LicenseAgreementDlg">1</Publish>
                </Control>
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
                    <Publish Event="NewDialog" Value="VerifyReadyDlg">SERVER_URL AND API_KEY</Publish>
                    <Publish Event="SpawnDialog" Value="MissingFieldsDlg"><![CDATA[NOT SERVER_URL OR NOT API_KEY]]></Publish>
                </Control>
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="37" TabSkip="no" Text="WixUI_Bmp_Banner" />
                <Control Id="Description" Type="Text" X="25" Y="21" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>MFA Server Connection.</Text>
                </Control>
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
                <Control Id="Title" Type="Text" X="15" Y="5" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>{\WixUI_Font_Title}Server Configuration</Text>
                </Control>
                <Control Id="BannerLine" Type="Line" X="0" Y="37" Width="370" Height="0" />
            </Dialog>
        </UI>
    </Fragment>
    <Fragment>
        <UI>
            <Dialog Id="MissingFieldsDlg" Width="260" Height="85" Title="[ProductName] Setup" NoMinimize="yes">
                <Control Id="Icon" Type="Icon" X="15" Y="15" Width="24" Height="24" ToolTip="Information icon" FixedSize="yes" IconSize="32" Text="ExclamIcon" />
                <Control Id="Return" Type="PushButton" X="100" Y="57" Width="56" Height="17" Default="yes" Cancel="yes" Text="&amp;Return">
                    <Publish Event="EndDialog" Value="Return">1</Publish>
                </Control>
                <Control Id="Text" Type="Text" X="48" Y="15" Width="194" Height="30" TabSkip="no">
                    <Text>
						Please provide both the Server URL and the API Key.
					</Text>
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>
